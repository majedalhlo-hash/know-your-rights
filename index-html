    <script>
        const questions = [
            {
                scenario: "🏡 النزاع على الملكية",
                icon: "🚜",
                question: "إذا بدأ جارك بفلاحه بالحرث على جزء من أرضك بدون إذنك، ما التصرف القانوني الصحيح؟",
                options: [
                    "A. ترك الأمر وعدم التدخل",
                    "B. محاولة التفاهم مع الجار سلميًا",
                    "C. اللجوء إلى القضاء فورًا",
                    "D. استخدام القوة لردعه"
                ],
                correct: 1,
                hint: "أول خطوة عملية وحكيمة هي التفاهم مع الجار بطريقة سلمية لحل النزاع، قبل التفكير في الإجراءات القانونية."
            },
            {
                scenario: "💼 الحقوق العمالية",
                icon: "👔",
                question: "إذا لم تُلتزم جهة العمل بحقوقك، ما الإجراء القانوني المناسب؟",
                options: [
                    "A. السكوت ومواصلة العمل",
                    "B. تقديم شكوى رسمية للجهة المختصة",
                    "C. نشر المشكلة على مواقع التواصل",
                    "D. الانسحاب فورًا دون إجراءات"
                ],
                correct: 1,
                hint: "القانون يوفر حماية للموظف، ويجب تقديم شكوى رسمية لضمان الحقوق."
            },
            {
                scenario: "👨‍👩‍👧‍👦 الخلافات الأسرية",
                icon: "💔",
                question: "إذا واجهت خلافًا أسريًا، ما أفضل وسيلة لحله قانونيًا وسلميًا؟",
                options: [
                    "A. التجاهل وعدم الحديث",
                    "B. اللجوء لمحامٍ أو مستشار أسري",
                    "C. الانفصال الفوري",
                    "D. مشاركة الخلاف مع الجميع في القرية"
                ],
                correct: 1,
                hint: "الوساطة القانونية أو الاستشارة الأسرية تساعد على حل النزاعات دون تفاقمها."
            },
            {
                scenario: "🛒 التجارة الإلكترونية",
                icon: "💻",
                question: "عند حدوث نزاع في التجارة الإلكترونية، ما الإجراء القانوني الأول الذي يُنصح به؟",
                options: [
                    "A. تجاهل النزاع ومتابعة العمل",
                    "B. التواصل مباشرة مع الطرف الآخر لتسوية النزاع",
                    "C. رفع دعوى قضائية فورًا",
                    "D. نشر شكوى على وسائل التواصل"
                ],
                correct: 1,
                hint: "التواصل الودي أولاً غالبًا ما يحل النزاعات قبل اللجوء للقضاء."
            },
            {
                scenario: "🤔 سوء الظن",
                icon: "👥",
                question: "عند سوء الظن بالآخرين، ما التصرف الشرعي الصحيح لتجنب الظلم أو الشائعات؟",
                options: [
                    "A. مشاركة الشكوك مع الجميع",
                    "B. تصديق الظن فورًا",
                    "C. التثبت من الحقيقة والاحتياط قبل الحكم",
                    "D. الانتقام من الشخص فورًا"
                ],
                correct: 2,
                hint: "الإسلام يحث على التثبت قبل الحكم على الناس لتجنب الظلم والشائعات."
            }
        ];

        let currentQuestion = 0;
        let score = 0;
        let answered = false;

        function startQuiz() {
            document.getElementById('startScreen').style.display = 'none';
            document.getElementById('quizScreen').style.display = 'block';
            showQuestion();
        }

        function showQuestion() {
            const question = questions[currentQuestion];
            document.getElementById('questionNumber').textContent = `${question.icon} السؤال ${currentQuestion + 1}`;
            document.getElementById('scenarioTitle').textContent = question.scenario;
            document.getElementById('questionText').textContent = question.question;
            document.getElementById('progressText').textContent = `السؤال ${currentQuestion + 1} من 5`;
            
            const optionsContainer = document.getElementById('optionsContainer');
            optionsContainer.innerHTML = '';
            
            question.options.forEach((option, index) => {
                const optionDiv = document.createElement('div');
                optionDiv.className = 'option';
                optionDiv.textContent = option;
                optionDiv.onclick = () => selectOption(index);
                optionsContainer.appendChild(optionDiv);
            });

            // تحديث شريط التقدم
            const progress = ((currentQuestion + 1) / questions.length) * 100;
            document.getElementById('progressBar').style.width = progress + '%';
            
            answered = false;
            document.getElementById('hint').classList.remove('show');
            document.getElementById('nextBtn').classList.remove('show');
        }

        function selectOption(selectedIndex) {
            if (answered) return;
            
            answered = true;
            const question = questions[currentQuestion];
            const options = document.querySelectorAll('.option');
            
            options.forEach((option, index) => {
                option.classList.add('disabled');
                if (index === question.correct) {
                    option.classList.add('correct');
                } else if (index === selectedIndex && index !== question.correct) {
                    option.classList.add('wrong');
                }
            });

            if (selectedIndex === question.correct) {
                score++;
            }

            // عرض التلميح
            document.getElementById('hint').textContent = question.hint;
            document.getElementById('hint').classList.add('show');
            
            // عرض زر التالي
            if (currentQuestion < questions.length - 1) {
                document.getElementById('nextBtn').textContent = 'السؤال التالي ⬅️';
                document.getElementById('nextBtn').classList.add('show');
            } else {
                document.getElementById('nextBtn').textContent = 'عرض النتائج 🎯';
                document.getElementById('nextBtn').classList.add('show');
            }
        }

        function nextQuestion() {
            currentQuestion++;
            if (currentQuestion < questions.length) {
                showQuestion();
            } else {
                showResults();
            }
        }

        function showResults() {
            document.getElementById('quizScreen').style.display = 'none';
            document.getElementById('resultsScreen').classList.add('show');
            
            document.getElementById('scoreCircle').textContent = `${score}/5`;
            
            let title, description;
            if (score === 5) {
                title = "🏆 ممتاز! أحسنت";
                description = "معرفتك بالتصرفات القانونية ممتازة! تعرف كيف تتعامل مع المواقف بحكمة.";
            } else if (score >= 3) {
                title = "👍 جيد جداً";
                description = "معرفتك جيدة بالأمور القانونية! استمر في التعلم.";
            } else {
                title = "📚 يحتاج مراجعة";
                description = "راجع المعلومات القانونية وستتحسن معرفتك إن شاء الله.";
            }
            
            document.getElementById('resultTitle').textContent = title;
            document.getElementById('resultDescription').textContent = description;
        }

        function restartQuiz() {
            currentQuestion = 0;
            score = 0;
            answered = false;
            
            document.getElementById('resultsScreen').classList.remove('show');
            document.getElementById('startScreen').style.display = 'block';
            document.getElementById('quizScreen').style.display = 'none';
        }
    </script>
